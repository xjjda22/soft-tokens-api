{
  "name": "soft-tokens-api",
  "version": "0.0.2",
  "description": "soft tokens api - two factor authentication",
  "main": "app.js",
  "scripts": {
    "start": "node -r dotenv/config app.js",
    "debug": "node --inspect -r dotenv/config app.js",
    "prettier": "prettier --write \"**/*.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --setupFiles dotenv/config --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --setupFiles dotenv/config",
    "test:cover": "jest --coverage --setupFiles dotenv/config",
    "test:load": "npx autocannon -c 100 -d 5 -p 10 localhost:3000/",
    "test:integration": "npm test"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "author": {
    "name": "harry",
    "url": "https://github.com/xjjda22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xjjda22/soft-tokens-api"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "celebrate": "^10.1.0",
    "compression": "^1.7.4",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.4",
    "notp": "^2.0.3",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "autocannon": "^4.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest": "^25.2.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
